{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "title": {
    "text":"Police Fatalities of people in different stages of life (2000 - 2016)",
    "anchor": "middle",
    "fontSize":20},
  "background":null,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/GeorgeTan615/PoliceFatalitiesVisualization/main/data/updated_police.csv"
  },
  "params": [
    {
      "name": "Date_Above",
      "value": 0,
      "bind": {"input": "range", "min": 1999, "max": 2015, "step": 1}
    },
    {
      "name": "Date_Below",
      "value": 2017,
      "bind": {"input": "range", "min": 2001, "max": 2017, "step": 1}
    }
  ],
  "transform": [
    {"filter": "datum.Year > Date_Above"},
    {"filter": "datum.Year < Date_Below"}
  ],
  "layer": [
    {
      "mark": "rect",
      "data": {
        "values": [
          {
            "start": "2013",
            "end": "2014",
            "event": "Black Live Matters was formed in 2013"
          }
        ],
        "format": {"parse": {"start": "date:'%Y'", "end": "date:'%Y'"}}
      },
      "encoding": {
        "x": {"field": "start", "timeUnit": "year"},
        "x2": {"field": "end", "timeUnit": "year"},
        "color": {"field": "event", "type": "nominal"}
      }
    },
    {
      "params": [
        {"name": "hover", "select": {"type": "point", "on": "mouseover"}}
      ],
      "mark": "area",
      "encoding": {
        "x": {
          "timeUnit": "yearmonth",
          "field": "Date",
          "title": "Date",
          "axis": {"domain": false, "format": "%Y", "tickSize": 0}
        },
        "y": {
          "aggregate": "count",
          "field": "Stages of Life",
          "axis": null,
          "stack": "center"
        },
        "color": {
          "field": "Stages of Life",
          "scale": {"scheme": "set1"},
          "condition": {
            "param": "hover",
            "field": "Stages of Life",
            "type": "nominal",
            "legend": null
          },
          "legend": {
            "title": "Events and Stages of Life","direction":"horizontal", "orient":"top", "labelFontSize": 15,"labelLimit":1000
        }
        },
        "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2},
        "tooltip": [
          {
            "field": "Stages of Life",
            "type": "nominal",
            "title": "Stages of Life"
          },
          {
            "timeUnit": "yearmonth",
            "field": "Date",
            "type": "nominal",
            "title": "Date"
          },
          {
            "field": "Stages of Life",
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Police Fatalities"
          }
        ]
      }
    }
  ]
}
