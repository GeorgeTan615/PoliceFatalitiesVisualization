{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A word cloud visualization depicting Vega research paper abstracts.",
    "padding": 0,



    
      "data": [
        {
          "name": "table",
          "url" : "https://raw.githubusercontent.com/GeorgeTan615/PoliceFatalitiesVisualization/main/data/armed.csv",
          "transform": [
            {
              "type": "countpattern",
              "field": "data",
              "case": "upper",
              "pattern": "[\\w']{3,}"
            },
            {
              "type": "formula", "as": "angle",
              "expr": "[-15, 0, 15][~~(random() * 3)]"
            },
            {
              "type": "formula", "as": "weight",
              "expr": "if(datum.text=='UNKNOWN' || datum.text == 'GUN' || datum.text == 'KNIFE', 800, 300) "
            }
          ]
        }
      ],
    
      "scales": [
        {
          "name": "color",
          "type": "ordinal",
          "domain": {"data": "table", "field": "text"},
          "range": ["#652c90","#d5a928", "#939597"]
        }
      ],
      
      "marks": [
        {
          "type": "text",
          "from": {"data": "table"},
          "encode": {
            "enter": {
              "text": {"field": "text"},
              "align": {"value": "center"},
              "baseline": {"value": "alphabetic"},
              "fill": {"scale": "color", "field": "text"},
               "tooltip": 
                   {"signal": "'Count: ' + datum.count + '\\nArmed: ' + datum.text"}
               
  
            },
            "update": {
              "fillOpacity": {"value": 1}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          },
          "transform": [
            {
              "type": "wordcloud",
              "size": [1200, 500],
              "text": {"field": "text"},
              "rotate": {"field": "datum.angle"},
              "font": "Helvetica Neue, Arial",
              "fontSize": {"field": "datum.count"},
              "fontWeight": {"field": "datum.weight"},
              "fontSizeRange": [25, 75],
              "padding": 2
            }
          ]
        }
      ]  
  }
